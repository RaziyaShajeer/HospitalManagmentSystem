@model IEnumerable<HosptitalManagmentSystem.Models.Department>


@{
    // Break into chunks of 4
    var deptGroups = Model.Select((dept, index) => new { dept, index })
                          .GroupBy(x => x.index / 4)
                          .ToList();
}
<div class="carousel-inner">
    @for (int i = 0; i < deptGroups.Count; i++)
    {
        <div class="carousel-item @(i == 0 ? "active" : "")">
            <div class="row g-4">

                @foreach (var item in deptGroups[i])
                {
                    <div class="col-md-3">
                        <div class="card h-100 text-center shadow">
                            <img src="@Url.Content("~/" + item.dept.DepartmentImagePath)" alt="Student Image" width="100" height="100" class="card-img-top rounded-circle mx-auto mt-3"
                                 alt="@item.dept.Name"
                                 style="width:150px; height:150px; object-fit:cover;" />
                              
                            <div class="card-body">
                                <h5 class="card-title">@item.dept.Name</h5>
                                <p class="card-text">@item.dept.Description</p>
                            </div>
                            <!-- ✅ Button to redirect -->
                            <a asp-controller="Admin"
                               asp-action="Details"
                               asp-route-id="@item.dept.DepartmentId"
                               class="btn btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

