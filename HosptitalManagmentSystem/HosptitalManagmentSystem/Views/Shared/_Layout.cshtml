@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
        }

        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

      
 
        .navbar {
            background: linear-gradient(90deg, #007bff 0%, #0056b3 100%);
        }

        .navbar-brand img {
            height: 45px;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffe082 !important;
            }

        footer {
            background-color: #002b5c;
            color: #fff;
            flex-shrink: 0;
            padding: 10px 0;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        main {
            min-height: calc(100vh - 140px);
            padding-top: 80px;
            flex: 1;
 
           
        }
    </style>
</head>

<body>
    <!-- 🌟 Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/hospital.png" alt="Hospital Logo" />
                    <span class="fw-bold text-white">HS Hospital</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav ms-auto align-items-center">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Doctor" asp-action="ViewAllDoctors">Doctors</a>
                        </li>

                        @* Patients menu only for non-doctors *@
                        @if (role != "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="PatientRegistration">Patients</a>
                            </li>
                        }

                        @* Appointments menu changes based on role *@
                        @if (role == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="getAppinmentsofDoctor">My Appointments</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appoiment" asp-action="getAllAppoinments">Appointments</a>
                            </li>
                        }

                        @* Login/Logout links *@
                        @if (role != null)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light ms-3" asp-controller="Doctor" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-warning ms-3 text-dark fw-semibold" asp-controller="Login" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 🌟 Page Content -->
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- 🌟 Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - Hospital Management System</p>
            <p>
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
