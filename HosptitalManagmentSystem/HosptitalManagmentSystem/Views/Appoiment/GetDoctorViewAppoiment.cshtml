@model HosptitalManagmentSystem.DTOs.AppoinmentViewDTo

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Appointment Details</h4>
        </div>

        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Appointment ID</dt>
                <dd class="col-sm-9">@Model.AppointmentId</dd>

                <dt class="col-sm-3 fw-bold">Patient Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Doctor Name</dt>
                <dd class="col-sm-9">@Model.DoctorName</dd>

                <dt class="col-sm-3 fw-bold">Token Number</dt>
                <dd class="col-sm-9">@Model.TokenNumber</dd>

                <dt class="col-sm-3 fw-bold">Department</dt>
                <dd class="col-sm-9">@Model.DepartmentName</dd>

                <dt class="col-sm-3 fw-bold">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3 fw-bold">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
        </div>
    </div>
</div>
