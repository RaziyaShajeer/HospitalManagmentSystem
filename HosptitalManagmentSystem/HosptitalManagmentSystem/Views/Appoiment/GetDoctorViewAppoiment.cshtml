@model HosptitalManagmentSystem.DTOs.AppoinmentViewDTo

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <!-- Header -->
        <div class="card-header bg-gradient-primary text-white text-center py-3 rounded-top">
            <h3 class="mb-0 fw-bold"><i class="bi bi-card-checklist me-2"></i> Appointment Details</h3>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-secondary fw-semibold">Appointment ID:</dt>
                <dd class="col-sm-8">@Model.AppointmentId</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Patient Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Doctor Name:</dt>
                <dd class="col-sm-8">@Model.DoctorName</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Token Number:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-success">@Model.TokenNumber</span>
                </dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Department:</dt>
                <dd class="col-sm-8">@Model.DepartmentName</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Location:</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Phone:</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>
        </div>

        <!-- Footer -->
        <div class="card-footer d-flex justify-content-between bg-light border-top rounded-bottom">
            <a asp-action="Index" class="btn btn-outline-primary fw-semibold">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning fw-semibold text-white">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
        </div>
    </div>
</div>
