@model IEnumerable<HosptitalManagmentSystem.DTOs.AppoinmentListViewDTO>

    <style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1; /* take remaining space */
        padding-top: 80px; /* optional if navbar is fixed */
    }

    .container-fluid {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    .card:last-child {
        margin-bottom: 0 !important;
    }
    </style>
<div class="container-fluid ml-4 mt-4 mr-4">
    <div class="card shadow-sm p-4 mb-4">
   
        <div class="row g-3">
            <div class="col-md-3">
                <label for="filterDepartment" class="form-label fw-semibold">Department</label>
                <select id="filterDepartment" class="form-select">
                    <option value="">-- All Departments --</option>
                    @foreach (var dept in ViewBag.Departments as IEnumerable<SelectListItem>)
                    {
                        <option value="@dept.Value">@dept.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterDoctor" class="form-label fw-semibold">Doctor</label>
                <select id="filterDoctor" class="form-select">
                    <option value="">-- All Doctors --</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterDate" class="form-label fw-semibold">Date</label>
                <input type="date" id="filterDate" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="button" id="btnFilter" class="btn btn-primary w-100 fw-semibold">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>
    </div>

    <div id="appointmentsContainer" class="card shadow-sm p-3">
        @await Html.PartialAsync("_AppointmentsTablePartial", Model)
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Load doctors dynamically by department
            $('#filterDepartment').change(function () {
                var deptId = $(this).val();
                $('#filterDoctor').empty().append('<option value="">-- All Doctors --</option>');
                if (deptId) {
                    $.get('@Url.Action("GetDoctorsByDepartment", "Appoiment")', { departmentId: deptId }, function (data) {
                        $.each(data, function (i, doctor) {
                            $('#filterDoctor').append('<option value="' + doctor.id + '">' + doctor.doctorName + '</option>');
                        });
                    });
                }
            });

            // Search button click event
            $('#btnFilter').click(function (e) {
                e.preventDefault();

                var dept = $('#filterDepartment').val() || null;
                var doctor = $('#filterDoctor').val() || null;
                var date = $('#filterDate').val() || null;

                $.ajax({
                    url: '@Url.Action("GetAllAppoinments", "Appoiment")',
                    type: 'GET',
                    dataType: 'html',
                    data: {
                        departmentId: dept,
                        doctorId: doctor,
                        date: date
                    },
                    success: function (data) {
                        $('#appointmentsContainer').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                    }
                });
            });
        });
    </script>
}
