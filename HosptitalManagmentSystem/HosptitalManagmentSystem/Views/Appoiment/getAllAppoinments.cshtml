@model IEnumerable<HosptitalManagmentSystem.DTOs.AppoinmentListViewDTO>

<div class="container my-4">
    <!-- Search Partial -->
    <div class="mb-4">
        @await Html.PartialAsync("_ApoinmentSearch")
    </div>

    <!-- Appointment Table -->
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-gradient bg-primary text-white fw-semibold d-flex align-items-center">
            <i class="bi bi-calendar-check me-2"></i> Appointment List
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-primary text-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.DoctorName)</th>
                            <th>@Html.DisplayNameFor(model => model.AppointmentDate)</th>
                            <th>@Html.DisplayNameFor(model => model.departmentName)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.TokenNumber)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-medium">@item.Name</td>
                                <td>@item.DoctorName</td>
                                <td>@item.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                <td>@item.departmentName</td>
                                <td>@item.Phone</td>
                                <td>
                                    <span class="badge bg-info-subtle text-dark border border-info px-3 py-2 rounded-pill">
                                        @item.TokenNumber
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Appointed" asp-route-id="@item.AppointmentId"
                                       class="btn btn-success btn-sm rounded-pill me-2">
                                        <i class="bi bi-check-circle me-1"></i> Appoint
                                    </a>
                                    <a asp-action="Cancel" asp-route-id="@item.AppointmentId"
                                       class="btn btn-danger btn-sm rounded-pill">
                                        <i class="bi bi-x-circle me-1"></i> Cancel
                                    </a>
                                    <form asp-controller="Appoiment" asp-action="DeleteAppoinment" asp-route-id="@item.AppointmentId" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm rounded-pill">
                                            <i class="bi bi-x-circle me-1"></i> Cancel
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Trigger Button -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#centerPopup">
    Show Popup
</button>

<!-- Modal -->
<div class="modal fade" id="centerPopup" tabindex="-1" aria-labelledby="popupLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center rounded-3 shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title w-100" id="popupLabel">@TempData["Message"]</h5>
            </div>
            <div class="modal-body">
                Appointment cancelled successfully!
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success px-4" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
.modal-content {
    border-radius: 1rem;
    font-size: 1.1rem;
}
<style>
    .table thead th {
        white-space: nowrap;
    }
    .table td, .table th {
        vertical-align: middle;
    }
</style>
